extends ../layouts/common

block content
    .mt-2.ml-5
        h1 Login
        if errors
            each error in errors
                .alert.alert-danger= error
        form(action="/auth/login", method="POST")
            label.mr-5(for="email") Email
            .d-block
            input#email(name= "email", type= "text", value= values ? values.name : "")
            .d-block.mt-3
            label.mr-5(for="password") Password
            .d-block
            input#password(name= "password", type= "text", value= values ? values.phone : "")
            .d-block.mt-2
            button.btn.btn-primary.ml-2 Login